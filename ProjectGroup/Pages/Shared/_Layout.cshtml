@using Azure
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject TicketResell_Service.INotificationService _notificationService
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectGroup</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectGroup.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/">Ticket Resell Platform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-flex justify-content-between">
                    <ul class="navbar-nav d-flex justify-content-center flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/TicketsPage/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Customer/UpPost">Up Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @{
                            String Username = HttpContextAccessor.HttpContext.Session.GetString("UserName");
                            String RoleIdString = HttpContextAccessor.HttpContext.Session.GetString("RoleId");
                            String UserIdString = HttpContextAccessor.HttpContext.Session.GetString("UserId");
                            String BalanceString = HttpContextAccessor.HttpContext.Session.GetString("Balance");
                            Guid? RoleId = string.IsNullOrEmpty(RoleIdString) ? (Guid?)null : Guid.Parse(RoleIdString);
                            Guid? UserId = string.IsNullOrEmpty(UserIdString) ? (Guid?)null : Guid.Parse(UserIdString);
                            decimal? Balance = string.IsNullOrEmpty(BalanceString) ? 0 : Decimal.Parse(BalanceString);

                            var notifications = await _notificationService.GetNotificationsByUserIdAsync(UserId);
                            int countNotifications = await _notificationService.CountNotificationByUserIdAsync(UserId);

                            if (!string.IsNullOrEmpty(Username) && RoleId != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link position-relative" href="#" id="notificationDropdown" role="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-bell"></i>
                                        <span
                                            class="badge bg-danger position-absolute top-0 start-100 translate-middle">@countNotifications</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown"
                                        style="width: 300px;">
                                        <li class="dropdown-header">Notifications</li>
                                        @if (notifications != null && notifications.Any())
                                        {
                                            int index = 0;
                                            foreach (var notification in notifications)
                                            {
                                                <li>
                                                    <a class="dropdown-item" data-disabled-href="/Customer/Notification/@index">
                                                        <small class="text-muted">@notification.SentAt.Value.Date</small><br>
                                                        <p>@notification.Message</p>
                                                    </a>
                                                </li>
                                                index++;
                                            }
                                            <li>
                                                <a class="dropdown-item text-center" href="/Customer/Notifications">
                                                    View all notifications
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>You have no notifications</li>
                                        }
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Hello, @Username!
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-page="/">
                                                <i class="fa-solid fa-wallet"></i> Wallet: @Balance
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-page="/Customer/Profile">
                                                <i class="fas fa-user me-2"></i> Profile
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-page="/Customer/Message">
                                                <i class="fas fa-envelope me-2"></i> Messages
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-area="" asp-page="/Authentication/Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="fas fa-sign-out-alt me-2"></i> Log Out
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Authentication/Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Authentication/Register">Sign up</a>
                                </li>
                            }
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProjectGroup - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>