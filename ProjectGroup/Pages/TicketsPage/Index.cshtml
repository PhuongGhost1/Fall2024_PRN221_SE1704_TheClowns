@page
@model ProjectGroup.Pages.TicketsPage.IndexModel

@{
    ViewData["Title"] = "Available Tickets";
}

<h1 class="text-center my-4 text-primary">Tickets for Sale</h1>

<div class="container">
    <div class="search-filter">
        <form method="post" asp-page-handler="Search" style="display: flex;">
            <div class="input-group mb-3"
                style="max-width: 400px;
                        margin-right: 50px;">
                <span class="input-group-text" id="inputGroup-sizing-default">Event Name</span>
                <input type="text" class="form-control" name="searchtxt" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="input-group mb-3"
                style="max-width: 300px;
                        margin-right: 50px;">
                <label class="input-group-text" for="inputGroupSelect01">Options</label>
                <select class="form-select" name="eventSelect" id="inputGroupSelect01">
                    <option selected value="">Choose...</option>
                    @foreach(var eventType in Model.EventTypes){
                        <option value="@(eventType.Id)">@eventType.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-secondary" style="height: 38px;">Search</button>
        </form>
    </div>
    @if (Model.Tickets != null && Model.Tickets.Any())
    {
        <div class="row">
            @foreach (var ticket in Model.Tickets)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-img-top position-relative">
                            <img style="width: 100%; height: 300px; object-fit: cover; object-position: center;" src="@(ticket.Images.FirstOrDefault()?.Url ?? "https://via.placeholder.com/300x200?text=No+Image+Available")" class="card-img" alt="@ticket.EventName">
                            <div class="card-img-overlay d-flex flex-column justify-content-end text-white p-3" style="background: rgba(0,0,0,0.4);">
                                <h5 class="card-title text-truncate">@ticket.EventName</h5>
                                <p class="card-text">@ticket.EventType?.Name</p>
                            </div>
                        </div>

                        <div class="card-body">
                            <p><strong>Date:</strong> @ticket.EventDate?.ToString("dd/MM/yyyy")</p>
                            <p><strong>Price:</strong> $@ticket.Price?.ToString("F2")</p>
                            <p class="text-muted"><small>Expires on: @ticket.ExpirationDate?.ToString("dd/MM/yyyy")</small></p>
                            <span class="badge @(ticket.TicketStatus == "Available" ? "bg-success text-light" : "bg-danger text-light")">
                                @ticket.TicketStatus
                            </span>
                        </div>

                        <div class="card-footer text-center bg-light">
                                <form method="post" asp-page-handler="SubmitComment">
                                    <input type="hidden" name="ticketId" value="@ticket.Id" />
                                    <div class="input-group mb-2">
                                        <input type="text" name="comment" class="form-control" placeholder="Add a comment..." required />
                                    </div>
                                    <div class="input-group mb-3">
                                        <label class="input-group-text" for="ratingSelect">Rating</label>
                                        <select class="form-select" name="rating" id="ratingSelect" required>
                                            <option selected disabled value="">Choose...</option>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                var stars = new string('★', i) + new string('☆', 5 - i);
                                                <option class="text-warning" value="@i">@stars</option>
                                            }
                                        </select>
                                    </div>
                                    @if (Model.UserId != ticket.OwnerId)
                                    {
                                        <button type="submit" class="btn btn-outline-primary btn-sm" @(Model.UserId == null ? "disabled" : "")>
                                            Submit Feedback
                                        </button>
                                    }else{
                                        <button type="submit" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#cannotCommentThat-@ticket.Id">
                                            Submit Feedback
                                        </button>
                                    }
                                </form>
                            <br>
                            <button type="button" class="btn btn-outline-primary btn-sm"
                                    data-bs-toggle="modal" data-bs-target="#ticketModal-@ticket.Id"
                            @(Model.UserId == null ? "disabled" : "")>
                                View Details
                            </button>
                            @if(ticket.TicketStatus != "Sold"){
                                if(Model.UserId != ticket.OwnerId)
                                {
                                    <button type="button" class="btn btn-success btn-sm"
                                            onclick="@(Model.UserId == null ? "window.location.href='/Authentication/Login'" : $"window.location.href='/Customer/Message?buyerId={Model.UserId}&sellerId={ticket.Owner?.Id}&ticketId={ticket.Id}'")">
                                        Buy Now
                                    </button>
                                }else{
                                    <button type="button" class="btn btn-success btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#cannotBuyThat-@ticket.Id">
                                        Buy Now
                                    </button>
                                }
                            }else{
                                <button type="button" class="btn btn-success btn-sm"
                                        data-bs-toggle="modal" data-bs-target="#ticketHasBeenSold-@ticket.Id">
                                    Buy Now
                                </button>
                            }
                        </div>
                    </div>

                    <div class="modal fade" id="ticketModal-@ticket.Id" tabindex="-1" aria-labelledby="ticketModalLabel-@ticket.Id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="ticketModalLabel-@ticket.Id">@ticket.EventName - Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><strong>Event:</strong> @ticket.EventType?.Name</p>
                                    <p><strong>Date:</strong> @ticket.EventDate?.ToString("MMMM dd, yyyy")</p>
                                    <p><strong>Price:</strong> $@ticket.Price?.ToString("F2")</p>
                                    <p><strong>Location:</strong> @ticket.Owner?.Username</p>
                                    <p><strong>Expires on:</strong> @ticket.ExpirationDate?.ToString("MMMM dd, yyyy")</p>
                                    <p><strong>Status:</strong> @ticket.TicketStatus</p>
                                    <div class="mt-3">
                                        <p><strong>Seller Details:</strong></p>
                                        <p><strong>Username:</strong> @ticket.Owner?.Username</p>
                                        <p>
                                            <strong>Contact:</strong>
                                            @if (Model.UserId != ticket.Owner?.Id && ticket.TicketStatus != "Sold")
                                            {
                                                <a href="@Url.Page("/Customer/Message", new { buyerId = Model.UserId, sellerId = ticket.Owner?.Id, ticketId = ticket.Id})">Start Conversation</a>
                                            }
                                            else
                                            {
                                                <strong>No contact available</strong>
                                            }
                                        </p>

                                    </div>

                                    <hr />
                                    <button class="btn btn-outline-secondary btn-sm mb-2" data-bs-toggle="collapse" data-bs-target="#feedbackSection-@ticket.Id" aria-expanded="false" aria-controls="feedbackSection-@ticket.Id">
                                        Show Feedback
                                    </button>

                                    <div class="collapse" id="feedbackSection-@ticket.Id">
                                        <div class="accordion" id="feedbackAccordion-@ticket.Id">
                                            @if (Model.TicketFeedbacks.ContainsKey(ticket.Id) && Model.TicketFeedbacks[ticket.Id].Any())
                                            {
                                                @foreach (var feedback in Model.TicketFeedbacks[ticket.Id])
                                                {
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header" id="heading-@feedback.Id">
                                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@feedback.Id" aria-expanded="false" aria-controls="collapse-@feedback.Id">
                                                                @feedback.User?.Username - Rating: @feedback.Rating
                                                                <span class="text-warning">
                                                                    @for (int i = 1; i <= 5; i++)
                                                                    {
                                                                        if (i <= feedback.Rating)
                                                                        {
                                                                            <i class="bi bi-star-fill"></i>
                                                                        }
                                                                        else
                                                                        {
                                                                            <i class="bi bi-star"></i>
                                                                        }
                                                                    }
                                                                </span>
                                                            </button>
                                                        </h2>
                                                        <div id="collapse-@feedback.Id" class="accordion-collapse collapse" aria-labelledby="heading-@feedback.Id" data-bs-parent="#feedbackAccordion-@ticket.Id">
                                                            <div class="accordion-body">
                                                                <p>@feedback.Comment</p>
                                                                <p class="text-muted"><small>Submitted on: @feedback.SubmittedAt?.ToString("MMMM dd, yyyy")</small></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-muted">No feedback available.</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    @if(ticket.TicketStatus != "Sold"){
                                        if(Model.UserId != ticket.OwnerId){
                                            <button type="button" class="btn btn-primary"
                                            onclick="@(Model.UserId == null ? "window.location.href='/Authentication/Login'" : $"window.location.href='/Customer/Message?buyerId={Model.UserId}&sellerId={ticket.Owner?.Id}&ticketId={ticket.Id}'")"
                                            >Proceed to Buy</button>
                                        }else{
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#cannotBuyThat-@ticket.Id">Proceed to Buy</button>
                                        }
                                    } else{
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ticketHasBeenSold-@ticket.Id">Proceed to Buy</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="cannotCommentThat-@ticket.Id" tabindex="-1" aria-labelledby="ticketModalLabel-@ticket.Id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <p>You cannot comment your own ticket :v !</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="cannotBuyThat-@ticket.Id" tabindex="-1" aria-labelledby="ticketModalLabel-@ticket.Id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <p>You cannot buy your own ticket :v !</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <div class="modal fade" id="ticketHasBeenSold-@ticket.Id" tabindex="-1" aria-labelledby="ticketModalLabel-@ticket.Id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <p>Sorry! This ticket has been sold @@@@.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                    <a class="page-link" asp-route-pageIndex = "@(Model.currentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                    </li>
                    @for(int count = 1; count<=Model.TotalPages; count++){
                        <li class="page-item @(count == Model.currentPage ? "active" : "")"><a class="page-link" asp-route-pageIndex = "@count">@count</a></li>
                    }
                    <li class="page-item">
                    <a class="page-link" asp-route-pageIndex = "@(Model.currentPage+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
    else
    {
        <p class="text-center">No tickets available.</p>
    }
</div>

