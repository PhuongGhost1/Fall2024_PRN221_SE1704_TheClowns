@page
@inject TicketResell_Service.IEventService _eventService
@model ProjectGroup.Pages.Customer.UpPostModel
@{
    ViewData["Title"] = "Up Post";
}

<div class="container mt-5">
    <h3 class="display-4 text-center">Add New Ticket</h3>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" enctype="multipart/form-data" asp-page-handler="AddTicket">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="UserId" class="form-control mb-3" />

        <div class="form-group mb-3">
            <label asp-for="Ticket.EventName" class="control-label">Event Name</label>
            <input asp-for="Ticket.EventName" class="form-control" placeholder="Enter event name" required />
            <span asp-validation-for="Ticket.EventName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Ticket.EventDate" class="control-label">Event Date</label>
            <input asp-for="Ticket.EventDate" class="form-control" type="date"
                min="@DateTime.Now.ToString("yyyy-MM-dd")" id="eventDate" required />
            <span asp-validation-for="Ticket.EventDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Ticket.EventTypeId" class="control-label">Event Type</label>
            <select asp-for="Ticket.EventTypeId" class="form-control"
                asp-items="(await _eventService.GetAllEventsAsync()).Select(x=> new SelectListItem() { Text = x.Name, Value = x.Id.ToString()})"
                required>
                <option value="">Please choose your event</option>
            </select>
            <span asp-validation-for="Ticket.EventTypeId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Ticket.Price" class="control-label">Price</label>
            <input asp-for="Ticket.Price" class="form-control" type="number" min="0.01" step="0.01"
                placeholder="Enter ticket price" required />
            <span asp-validation-for="Ticket.Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Ticket.ExpirationDate" class="control-label">Expiration Date</label>
            <input asp-for="Ticket.ExpirationDate" class="form-control" type="date"
                min="@DateTime.Now.ToString("yyyy-MM-dd")" id="expirationDate" required />
            <span asp-validation-for="Ticket.ExpirationDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Ticket.Serial" class="control-label"></label>
            <input asp-for="Ticket.Serial" class="form-control" placeholder="Enter ticket serial number" required />
            <span asp-validation-for="Ticket.Serial" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CoverPhoto" class="control-label">Image</label>
            <div class="custom-file">
                <input asp-for="CoverPhoto" class="custom-file-input" id="customFileCover" required />
            </div>
            <span asp-validation-for="CoverPhoto" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Add Ticket" class="btn btn-primary btn-lg" />
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/4/6/9fcpA4V0+h0XrC0W0mR3erOn21vIx1hO12"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
<script>
    document.getElementById("eventDate").addEventListener("change", function () {
        const eventDate = this.value;
        const expirationDateInput = document.getElementById("expirationDate");

        expirationDateInput.min = eventDate;
    });
</script>