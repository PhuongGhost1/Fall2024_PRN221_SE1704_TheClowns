@page
@model ProjectGroup.Pages.Customer.PaymentSuccessModel
@{
    ViewData["Title"] = "Success Payment";
}

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }

    <div class="message-box alert alert-success">
        <h2 class="text-center">Thanh toán thành công!</h2>
        <p class="text-center">Cảm ơn bạn đã hoàn tất giao dịch. Vé của bạn sẽ được gửi tới trong thời gian sớm nhất.</p>
        <div class="text-center">
            <a href="/Customer/Message" class="btn btn-custom btn-lg">Quay lại trang nhắn tin</a>
        </div>
    </div>
</div>