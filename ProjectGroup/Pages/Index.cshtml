@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Available Tickets</h2>
    <div class="row">
        @foreach (var ticket in Model.Tickets)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@ticket.EventName</h5>
                        <p class="card-text">
                            <strong>Event Date:</strong> @ticket.EventDate <br />
                            <strong>Price:</strong> $@ticket.Price <br />
                            <strong>Location:</strong> @ticket.TicketStatus
                        </p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
